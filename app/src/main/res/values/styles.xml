<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <!-- Кастомная AppTheme.Launcher, устанавливает в качестве фона нашу drawable -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher</item>
        <!-- можем поменять цвет colorPrimaryDark, чтобы соответствовать цвету windowBackground (нашему фону) -->
         <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">56dp</item><!-- item size in menu-->
        <item name="listPreferredItemHeightSmall">56dp</item><!-- item size in menu-->
        <item name="android:selectable">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
